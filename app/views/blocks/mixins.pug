mixin headerNavItem(content, href = '#')
	if content
		li.header-menu-item
			a.header-menu-link(href= href)= content
	else
		if block
			li.header-menu-item
				a.header-menu-icon(href= href)
					block

mixin headerBottomItem(number, text, priority)
	if priority
		.header-bottom-item.is-active
				span.header-bottom-number= number
				span.header-bottom-text= text
	else
		.header-bottom-item
				span.header-bottom-number= number
				span.header-bottom-text= text

mixin aboutListItem({src = "/images/img-about1.png", alt = '', title = "Super Team"})
	.about-item
		img.about-image(src = src, alt = alt)
		.about-content
				i.fa.fa-users.about-icon
				span.about-title= title

mixin numberListItem(count, text)
	.number-item
		h4.number-item-count= count
		span.number-item-text= text

mixin servicesListItem(src, title, description, alt='')
	.services-item
		img(src= src, alt= alt class="services-item-image")
		.services-item-info
			h3.services-item-title= title
			p.services-item-desc= description

mixin wedoListItem(src, title, content, alt='', flag)
	.wedo-item(class= flag)
		.wedo-item-header
			img(src= src, alt= alt class="wedo-item-icon")
			h3.wedo-item-title= title
			i.fal.fa-angle-up.wedo-item-arrow
		if content
			.wedo-item-content-wrapper
				.wedo-item-content= content

mixin teamSocialItemList(href = '#team', iconClass)
	li.team-item-social-item
		a.team-item-social-item-link(href= href)
			i(class= iconClass).team-item-social-item-icon

- const teamSocialIcons = ['fab fa-facebook-f', 'fab fa-twitter','fab fa-pinterest-p', 'fab fa-instagram'];
mixin teamListItem(src = '', name = '',position = '', alt = '', ...hrefs)
	.team-item
		.team-item-wrapper
			img(src= src, alt="" class="team-item-image")
			.team-item-content
				ul.team-item-social
					+teamSocialItemList(hrefs[0], teamSocialIcons[0])
					+teamSocialItemList(hrefs[1], teamSocialIcons[1])
					+teamSocialItemList(hrefs[2], teamSocialIcons[2])
					+teamSocialItemList(hrefs[3], teamSocialIcons[3])
		.team-item-info
			h3.team-item-name= name
			span.team-item-position= position

mixin workListItem(src = '', title, description, alt, flag = false)
	.work-item(class = flag ? 'work-item--full' : '')
		img(src= src, alt= alt class="work-image")
		.work-content
			img(src="/images/img-work-icon.png", alt="" class="work-icon")
			h3.work-title= title
			span.work-desc.text.text-light= description

mixin workColumnItem
	.work-column
		if block
			block

mixin peopleItemList(src, name, position, description= 'Lorem ipsum dolor sit amet consectetur, adipisicing elit. Maxime dolore sunt delectus voluptates necessitatibus rem nulla mollitia perspiciatis quibusdam vero impedit, sequi cum est illum incidunt sint, quae consequuntur! Odio?', alt = '')
	li.people-item
