mixin storyItemList(src = "/images/img-blog1.png", dateNumber = '15', dateText = 'Jan', title= 'Lorem, ipsum dolor sit amet consectetur adipisicing elit', desc = 'Lorem ipsum dolor sit amet consectetur, adipisicing elit. Maxime dolore sunt delectus voluptates necessitatibus rem nulla mollitia perspiciatis quibusdam vero impedit, sequi cum est illum incidunt sint, quae consequuntur! Odio?', views = '542', comments = '15',alt = '')
	li.story-item
		.story-media
			img.story-image(src = src, alt= alt)
			.story-date
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc.text
			p.story-desc-text= desc
		.story-meta
			.story-meta-item
				i.fa.fa-eye.story-meta-icon
				span.story-meta-number.text= views
			.story-meta-item
				i.fa.fa-comment.story-meta-icon
				span.story-meta-number.text= comments

mixin quoteItemList(src = "/images/img-quote.png", type = false, desc = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Exercitationem provident nostrum, explicabo fuga accusantium ipsa iste nesciunt. Officiis quos aut quod! Dolorum, in facere provident omnis perferendis eos ipsa consequuntur.', author = 'Jon Doe', alt = "")
	.quote-content
		if type
			img(src= src, alt="").quote-image
		else
			.quote-icon
				img(src= src, alt="")
		.quote-info
			p.quote-desc= desc
			span.quote-author= author

mixin footerSocialItem(href = '#', className = 'fab.fa-facebook')
	a(href = href).footer-social-icon
		i(class = className)

mixin footerBlogItem(href = '#', src = '/images/img-blogs1.png', title = 'Lorem, ipsum dolor sit amet consectetur adipisicing elit', date = 'Jan 9, 2016', alt = '')
	a(href=href).footer-blog
		img.footer-blog-image(src= src, alt= alt)
		.footer-blog-info
			h4.footer-blog-title= title
			span.footer-blog-time.text.text-light= date

mixin footerImageItem(src = '/images/img-work1.png', alt = '')
	.footer-image
		img(src= src, alt= alt)

mixin blockBox(caption, title, description)
	.block-box
		h3.block-box-caption= caption
		h2.block-box-title= title
		if description
			p.block-box-desc= description